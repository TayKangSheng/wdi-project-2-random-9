<div class="container">
  <h1 class="page-header">Edit photo</h1>
  <form enctype="multipart/form-data" method="POST" action=<%= "/photos/" + singlePhoto._id + "?_method=PUT"%>>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="titleInput" placeholder="Title" value="<%= singlePhoto.title %>" name="title">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" class="form-control" id="descriptionInput" placeholder="Description" name="description"><%= singlePhoto.description %></textarea>
    </div>
    <div class="form-group">
      <label for="photo">Photo upload</label>
      <input type="file" class="form-control" id="photoInput" placeholder="Enter img src URL here" value="<%= singlePhoto.url %>" name="url">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </form>
</div>
